# Global Stuf
set $mod Mod1
set $sup Mod4

font Source Code Pro 12
xwayland enable

set $term kitty -1
set $browser firefox

default_border none

gaps inner 2
gaps outer 1
smart_gaps on

focus_follows_mouse yes

#::::::::window borders::::::::::::::::
client.background 000000
client.focused 000000f0 000000f0 ffffff
client.focused_inactive 000000f0 000000f0 fffffff0
client.unfocused 0b0217f0 0b0217f0 dbc7c8aa 
client.urgent ffffff 000000 ffffff 
client.placeholder ffffff 000000 ffffff 

#::::::::disable_window_border::::::::                                                                  
for_window [class="^.*"] border pixel 0                                                                   
for_window [app_id="^.*"] border pixel 0                                                                   

#::::::::set transperancy::::::::::::
for_window [class="^(Github Desktop|Signal|Brave-browser|Signal-desktop)$"] opacity 0.99
for_window [app_id="^(Brave-browser|Element|electron|lutris)"] opacity 0.99

#:::::::Enable floating:::::::::::::
for_window [app_id="^(wdisplays|Bitwarden|org.kde.kdeconnect.daemon|dmenu|pavucontrol-qt|songrec|electron|org.kde.polkit-kde-authentication-agent-1|Popsicle|fragments|org.kde.kdeconnect-urlhandler|lutris|org.gnome.TwentyFortyEight|com.nextcloud.desktopclient.nextcloud|org.kde.kdeconnect-indicator|audacious|kvantummanager|qt5ct|com.github.wwmm.easyeffects|com.rafaelmardojai.Blanket|obs|code|wofi|qemu-system-x86_64|org.kde.kdeconnect.sms|corectrl|qt6ct|wihotspot-gui|blueberry.py)$"] floating enable
for_window [class="^(Bitwarden|XEyes|scrcpy|GParted)$"] floating enable
for_window [title="^(Picture-in-Picture)$"] floating enable
for_window [title="Copying *"] floating enable
for_window [title="Moving *"] floating enable
for_window [title="Deleting *"] floating enable
for_window [title="Firefox — Sharing Indicator"] floating enable
for_window [title="Progress Dialog — Dolphin"] floating enable

#:::::;;;apps to hide:::::::::
for_window [title="Firefox — Sharing Indicator"] move scratchpad
for_window [app_id="FFPWA-01FFKCF7GFET9F2VCJDNNFD1FJ"] move scratchpad

#::::Inhibit Idle if a window is fullscreen:::;
